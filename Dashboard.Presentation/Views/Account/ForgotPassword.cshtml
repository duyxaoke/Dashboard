@model Dashboard.Presentation.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu?";
}
<div class="col-md-12">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewBag.Title</h3>
        </div>
        <div class="box-body">
            <form action="ForgotPassword" method="post" role="form">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="form-label-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập Email" })
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Lấy lại mật khẩu</button>
                </div>
            </form>
        </div>
   </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
