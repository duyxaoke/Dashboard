@model Dashboard.Presentation.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
<div class="col-md-12">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewBag.Title</h3>
        </div>
        <div class="box-body">
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)
                <div class="form-group">
                    <div class="form-label-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Reset</button>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
